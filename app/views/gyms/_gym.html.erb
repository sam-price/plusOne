<div class="col-md-4">
  <div class="card">
    <div class="card-header" data-background-color="blue">
      <h4><%= link_to gym.name, gym_path(gym.id) %></h4>
    </div>

    <div class="card-content">
      <div class="col-md-12">
      <% if gym.bio? %>
        <p><%= gym.bio %></p>
      <% end %>
    </div>
<!--Loop through each user belonging to the gym and display their name and link to their profile.
   only do it if there are gym users present  -->

      <% if gym.users.empty? %>
        <p>No users at this gym yet.</p>
      <% else %>
        <ul>
        <% gym.users.each do |user| %>
          <li><%= link_to user.first_name + ' ' + user.last_name, user_path(user.id) %></li>
        <% end %>
        </ul>
      <% end %>
      
    </div>
  </div>
</div>
