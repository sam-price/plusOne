<% flash.each do |key, value| %>
<!-- Using Bootstrap to do growl like javascript messages.
These are displayed on each page -->
<script type="text/javascript">
$(document).ready(function() {
  flashMessage.showNotification('top', 'center');
});

flashMessage = {
  showNotification: function(from, align){

      icon = "<% if key == 'alert' %>error_outline<% elsif key == 'notice' %>done<% end %>"
      msg = "<% if key == 'alert' %><br>Ahh! Looks like you will need to try again...<% end %>"
      type = "<% if key == 'alert' %>danger <%elsif key == 'notice'%>success<% end %>"

      $.notify({
          icon: icon,
          message: "<% if key == 'alert' %><strong><%= value %></strong><%else%><%= value %><% end %>" + msg

        },{
            type: type,
            timer: 2000,
            placement: {
                from: from,
                align: align
            }
        });
  }
}
</script>
<% end %> <!--End flash message-->
