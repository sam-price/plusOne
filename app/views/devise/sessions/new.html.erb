<%= render 'landings/background' %>
<div class="app app-root flex-row align-items-center">
  <div class="container">
  <%= render 'landings/logo' %>
  <hr>
    <div class="row justify-content-center">
      <div class="col-md-8"> <!-- How many rows wide my center container is -->
        <div class="card-group mb-0">
          <div class="card p-2">
            <div class="card-block">
            <h1>Login</h1>
            <p class="text-muted uppercase landing-white-400">Sign In to your account</p>
              <div class="login-form">

                <!--START SIMPLE FORM-->
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.input :email, autofocus: true %>
                <%= f.input :password %>

                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
                </div>

                <%= render "devise/shared/links" %>
                <% end %> <!-- end simple form-->
              </div> <!--.login-form -->
            </div><!--.card-block-->
          </div><!--.card p-2-->

          <div class="card card-inverse card-primary p-2 hidden-md-down" style="width:44%">
            <div class="card-block text-center">

            <br><hr>
              <div>
              <h2 class="white">Join Us</h2>
              <p class="uppercase landing-white-400">Haven't got an account?</p>
              <p class="landing-white-400">No fear! Join our community for free and find your perfect workout partner today!</p>

              <%= link_to 'Register Now!', new_user_registration_path, class: 'btn btn-success btn-block mt-1 landing-white-400' %>

              </div>
              <hr>

            </div><!--.card-block-->
          </div><!--.card-inverse-->
        </div> <!--.card-group-->
      </div><!--.col-md-8-->
    </div> <!--.row-->
  </div><!--.container-->
</div> <!--.app-->
