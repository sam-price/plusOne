<%= simple_form_for @search do |s| %>
  <%= s.label :sports %>
  <%= s.select :sports, options_for_select(@sports), include_blank: :true %>

  <%= s.label :goals %>
  <%= s.select :goals, options_for_select(@goals), include_blank: :true %>

  <%= s.input :cities, collection: @cities, label: "City" %>

  <%= submit_tag "Search" %>
<% end %>
