<% title 'All Users' %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="card">
      <div class="card-header" data-background-color="purple">
        <h3 class="title text-center">All Users</h3>
        <p class="category text-center">Search using the simple or advanced search below to find your perfect workout partner.</p>
      </div> <!--end card-header-->

      <div class="card-content">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-6">
                <div class="">
                  <!-- simple get request form -->
                <%= simple_form_for users_path, :method => 'get' do |f| %>

                  <div class="form-group text-center">
                    <!--passing through search parameters into the URL -->
                    <%= text_field_tag :search, params[:search], placeholder: 'Search (Name, Exercise, Goals, Skill)', class: 'form-control' %>
                    <%= button_tag 'Quick Search<div class="ripple-container"></div>'.html_safe, class: 'btn btn-info btn-ctm' %> <br>
                  </div>

                </div>
                <!-- paginating the display of users -->
                <%= will_paginate(@users) %>

              </div>

              <div class="col-md-6 text-center">
                <br><br>
                <p>If you want a more refined search use the advanced search below.</p>

                <%= link_to 'Advanced Search', new_search_path, class: 'btn btn-warning' %>
              </div>
              <% end %> <!-- end simple form -->

            </div>

            <!--render the users partial - has all users stored inside -->
            <%= render @users %>

            <!--pagination again at bottom of page -->
            <%= will_paginate(@users) %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
