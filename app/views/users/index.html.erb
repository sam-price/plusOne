<% title 'All Users' %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="card">
      <div class="card-header" data-background-color="purple">
        <h3 class="title text-center">All Users</h3>
        <p class="category text-center">Search using the simple or advanced search below to find your perfect workout partner.</p>
      </div> <!--end card-header-->

      <div class="card-content">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-12">
                <div class="text-center">
                <%= simple_form_for users_path, :method => 'get' do |f| %>

                  <div class="form-group">
                    <%= text_field_tag :search, params[:search], placeholder: 'Search (Name, Exercise, Goals)', class: 'form-control' %>
                    <%= button_tag 'Quick Search<div class="ripple-container"></div>'.html_safe, class: 'btn btn-lg btn-info btn-ctm' %> <br>
                    <%= link_to 'Advanced Search', new_search_path, class: 'btn btn-info' %>
                  </div>

                <% end %>
                </div>
                <%= will_paginate(@users) %>

              </div>

            </div>

            <%= render @users %>
            <%= will_paginate(@users) %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
